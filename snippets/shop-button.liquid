{%- comment -%} 
  Shop Button Component
  Usage:
  {% render 'shop-button', text: 'SHOP ENIQ', url: '#' %} 
{%- endcomment -%}

{%- liquid
  assign button_text = text | default: 'SHOP ENIQ'
  assign button_url = url | default: '#'
-%}

<a href="{{ button_url }}" class="shop-button">
  {{ button_text }}
</a>

<style>
  .shop-button {
    display: inline-block;
    padding: 12px 24px;
    background-color: rgb(180, 173, 166);
    color: #000;
    text-decoration: none;
    font-weight: 500;
    border-radius: 4px;
    transition: background-color 0.3s ease;
    text-transform: uppercase;
    font-size: 14px;
    letter-spacing: 0.5px;
  }

  .shop-button:hover {
    background-color: rgb(160, 153, 146);
  }
</style>