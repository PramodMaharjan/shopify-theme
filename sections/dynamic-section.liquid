
{{ 'dynamic-section.css' | asset_url | stylesheet_tag }}

<h2 style="text-align:{{section.settings.text_alighnment}}">{{ section.settings.title }}</h2>
<div class="promotion__info">
{%for block in section.blocks%}
  {% case  block.type %}
    {%when 'promotion'%}
      <div>
      <h3>{{block.settings.title}}</h3>
      {{block.settings.img |  image_url: width: 500 |  image_tag}}
      </div>
  {% endcase %}
{% endfor %}
</div>

{% schema %}
  {
    "name": "Promotions Groupssss",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "label": "Title",
        "id": "title"
      },
      {
        "type": "select",
        "label": "Text Alignment",
        "id": "text_alighnment",
        "options": [
          {
          "value": "left",
          "label": "Left"
        },
          {
          "value": "center",
          "label": "Center"
        },
          {
          "value": "right",
          "label": "Right"
        },
        ]
      }
    ],
    "blocks": [
      {
        "type":"promotion",
        "name":"Promotion",
        "settings": [
          {
            "type": "text",
            "label":"Title",
            "id": "title"
          },{
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          }
        ]
    }
    ],
    "presets": [
      {
        "name": "Promotions Group"
      }
    ]

  }
{% endschema %}