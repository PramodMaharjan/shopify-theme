<h2 style="text-align:{{section.settings.text_aighnment}}">{{ section.settings.title }}</h2>
<div style="display: flex; jusify-content: center; align-items:center">
{%for block in section.blocks%}
  {% case  block.type %}
    {%when 'promotion'%}
      <h3>{{block.settings.title}}</h3>
      {{block.settings.img |  image_url: width: 500 |  image_tag}}
  {% endcase %}
{% endfor %}
</div>

{% schema %}
  {
    "name": "Promotions Group",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "label": "Title",
        "id": "title"
      },
      {
        "type": "select",
        "label": "Text Alignment",
        "id": "text_aighnment",
        "options": [
          {
          "value": "left",
          "label": "Left"
        },
          {
          "value": "center",
          "label": "Center"
        },
          {
          "value": "right",
          "label": "Right"
        },
        ]
      },
    ],
    "blocks": [
      {
        "type":"promotion",
        "name":"Promotion",
        "settings": [
          {
            "type": "text",
            "label":"Title",
            "id": "title"
          },{
            "type": "image_picker",
            "id": "img",
            "label": "Image"
          }
        ]
    }
    ],
    "presets": [
      {
        "name": "Promotions Group"
      }
    ]

  }
{% endschema %}