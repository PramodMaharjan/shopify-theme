{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "NEW LIFTING DROPS"
      },
      {
        "type": "textarea",
        "id": "subheading",
        "label": "Subheading",
        "default": "Premium pump covers & THE athlete tracksuit to help you look, feel & lift strong af."
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "SHOP NOW"
      }
    ]
  }
{% endschema %}

<div class="banner-section" style="background-image: url({{ section.settings.banner_image | img_url: 'master' }});">
  <div class="banner-content">
    <h1>{{ section.settings.heading }}</h1>
    <p>{{ section.settings.subheading }}</p>
    <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
  </div>
</div>